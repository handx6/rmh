{% extends 'base.html.twig' %}

{% block title %}Hello Index{% endblock %}

{% block body %}

<div class="text-center text-white">
    <h1>Hello Index ✅</h1>
    {# Si app.user n'est pas nulll alors il il affiche app.user.username #}
   {% if app.user %}
    {# <p class="text-xl text-white">{{ app.user.username }}</p> #}
    <p>Tu es connecté &#x1F642; {{app.user.email}}</p>
    <button type="submit" class="btn glass text-white">
      <a href="/logout">Déconnexion</a>
    </button>
    <button type="submit" class="btn glass text-white">
      <a href="/devis">Devis</a>
    </button>
  {% else %}
    <p>Tu n'es pas connecté &#x1F625;</p>
    <button type="submit" class="btn glass text-white">
        <a href="/login">Connexion</a>
    </button>
     <div class="text-white space-x-5 flex pt-5 mx-auto">
        <p>Si vous n'avez pas de compte vous pouvez ?</p>
        <a class="text-indigo-600" href="/inscription"> Sign-up !</a> 
      </div>
   
  {% endif %}
      
    </div>
</div>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>  
        {% endfor %}

{% endblock %}
