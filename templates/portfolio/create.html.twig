{% extends 'base.html.twig' %}

{% block title %}Ajouter un item
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<h1>Ajouter un item</h1>
		<div class="max-w-sm mx-auto">
			{{ form_start(showForm, {'attr': {'novalidate': 'novalidate'}})}}
			{{ form_widget(showForm)}}
			<div class="mt-5">
				<input type="submit" value="Envoyer" class="btn btn-secondary">
			</div>
			{{ form_end(showForm)}}
		</div>

	</div>
{% endblock %}

